!ENDIF
!IFDEF NEED_FREETYPE_DLL
	@echo File "$(STAGING_DIR)\libpangoft2-1.0-0.dll" >> $@
	@echo File "$(STAGING_DIR)\$(FREETYPE_DLL)" >> $@
!ENDIF
!IFDEF NEED_HARFBUZZ_DLL
