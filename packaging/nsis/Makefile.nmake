	@echo File "$(STAGING_DIR)\libsmi-2.dll" >> $@
!ENDIF
!IFDEF WINSPARKLE_DIR
	@echo # WinSparkle >> $@
	@echo File "$(STAGING_DIR)\WinSparkle.dll" >> $@
!ENDIF
!IF "$(ZLIB_DIR)" != ""
	@echo # Zlib >> $@
	@echo File "$(STAGING_DIR)\zlib1.dll" >> $@
!ENDIF

