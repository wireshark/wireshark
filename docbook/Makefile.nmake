	PATH=/usr/bin
	$(A2X) --verbose \
		--attribute=docinfo \
		--asciidoc-opts=\"--conf-file=asciidoc.conf\" \
		--no-xmllint \
		--format=docbook \
		developer-guide.asciidoc
<<

